<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo" />

    <!-- Menu Options -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <!-- First Line -->
        <RelativeLayout
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/menu_option_1_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/dog_find_logo" />

            <TextView
                android:id="@+id/menu_option_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_option_1_image"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto"
                android:paddingTop="8dp"
                android:text="Find your vet"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/menu_option_2_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/dog_forum_logo" />

            <TextView
                android:id="@+id/menu_option_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_option_2_image"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto"
                android:paddingTop="8dp"
                android:text="Forums"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="0dp">

            <ImageView
                android:id="@+id/menu_option_3_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/dog_vaccination_logo"
                android:layout_gravity="center_vertical"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/menu_option_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/menu_option_3_image"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto"
                android:paddingTop="8dp"
                android:text="Vaccinations record"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <!-- Second Line -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/menu_option_4_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/info_dog_logo"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/menu_option_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_option_4_image"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto"
                android:paddingTop="8dp"
                android:text="Dog Info"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="0dp">

            <ImageView
                android:id="@+id/menu_option_5_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sick_dog_logo"
                android:layout_gravity="center_vertical"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/menu_option_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/menu_option_5_image"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto"
                android:paddingTop="8dp"
                android:text="Suspicious food analyzer"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <!-- Repeat similar RelativeLayout elements for other menu options -->

    </GridLayout>

    <!-- Login Button -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:fontFamily="@font/roboto"
        android:text="Login"
        android:textSize="22dp"
        android:textStyle="bold" />

</GridLayout>
