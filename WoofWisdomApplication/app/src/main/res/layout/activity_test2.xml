<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo" />
<!--
        android:contentDescription="@string/app_logo_description" />
-->

    <!-- Menu Options -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="0dp">

        <ImageView
            android:id="@+id/menu_option_1_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/dog_find_logo"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/menu_option_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/menu_option_1_image"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/prosto_one"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:text="Find your vet"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="0dp">

        <ImageView
            android:id="@+id/menu_option_2_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/dog_forum_logo"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/menu_option_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/menu_option_2_image"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/prosto_one"
                android:padding="0dp"
                android:text="Forums"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="0dp">

        <ImageView
            android:id="@+id/menu_option_3_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/dog_vaccination_logo"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/menu_option_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/menu_option_3_image"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/prosto_one"
                android:padding="0dp"
                android:text="Vaccinations record"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="0dp">

        <ImageView
            android:id="@+id/menu_option_4_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/info_dog_logo"
            android:layout_gravity="center_vertical"
            android:layer_centerHorizontical="true"
            android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/menu_option_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/menu_option_4_image"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/prosto_one"
                android:layer_centerHorizontical="true"
                android:padding="0dp"
                android:text="Dog Info"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="0dp">

        <ImageView
            android:id="@+id/menu_option_5_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sick_dog_logo"
            android:layout_gravity="center_vertical"
            android:layer_centerHorizontical="true"
            android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/menu_option_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/menu_option_5_image"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/prosto_one"
                android:layer_centerHorizontical="true"
                android:padding="0dp"
                android:text="Suspicious food analyzer"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Repeat similar TextView elements for other menu options -->

    </GridLayout>

    <!-- Login Button -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:fontFamily="@font/roboto"
        android:text="Login"
        android:textSize="22dp"
        android:textStyle="bold" />

</GridLayout>
