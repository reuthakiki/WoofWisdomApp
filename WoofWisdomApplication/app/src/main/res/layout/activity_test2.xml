<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo" />
<!--
        android:contentDescription="@string/app_logo_description" />
-->

    <!-- Menu Options -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="0dp">
        <ImageView
            android:id="@+id/findVetImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/dog_find_logo"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/findVetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/findVetImage"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/prosto_one"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:text="Find your vet"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="0dp"
            android:layout_marginTop="0dp">
        <ImageView
            android:id="@+id/forumsImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/dog_forum_logo"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/forumsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/forumsImage"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/prosto_one"
                android:padding="0dp"
                android:text="Forums"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="0dp">
        <ImageView
            android:id="@+id/vaccinationsImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/dog_vaccination_logo"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/vaccinationsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/vaccinationsImage"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/prosto_one"
                android:padding="0dp"
                android:text="Vaccinations record"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="0dp">
        <ImageView
                android:id="@+id/dogInfoImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/info_dog_logo" />

            <TextView
                android:id="@+id/dogInfoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/dogInfoImage"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/prosto_one"
                android:padding="0dp"
                android:text="Dog Info"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="0dp">
        <ImageView
            android:id="@+id/suspiciousFoodImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sick_dog_logo"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/suspiciousFoodButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/suspiciousFoodImage"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/prosto_one"
                android:padding="0dp"
                android:text="Suspicious food analyzer"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Repeat similar TextView elements for other menu options -->

    </GridLayout>

    <!-- Login Button -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:fontFamily="@font/prosto_one"
        android:text="Login"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Â© 2023 Woof Wisdom. All rights reserved."
        android:fontFamily="@font/prosto_one"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginTop="3dp" />

</GridLayout>
