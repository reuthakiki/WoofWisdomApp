<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forumsAddQuestion">

    <TextView
        android:id="@+id/textViewAddForum"
        android:layout_width="353dp"
        android:layout_height="64dp"
        android:text=" Add question to forum"
        android:textColor="#535151"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="42dp" />

    <EditText
        android:id="@+id/NameOfWriter"
        android:layout_width="348dp"
        android:layout_height="52dp"
        android:background="#D3D1D1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  Name"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="133dp" />

    <EditText
        android:id="@+id/Message_title"
        android:layout_width="348dp"
        android:layout_height="56dp"
        android:autoText="false"
        android:background="#D3D1D1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  Message title"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="341dp" />

    <EditText
        android:id="@+id/whichForum3"
        android:layout_width="348dp"
        android:layout_height="164dp"
        android:autoText="false"
        android:background="#D3D1D1"
        android:ems="10"
        android:gravity="start"
        android:inputType="textPersonName"
        android:text="  Message content"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="420dp" />

    <EditText
        android:id="@+id/whichForum"
        android:layout_width="348dp"
        android:layout_height="56dp"
        android:autoText="true"
        android:background="#D3D1D1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  Which forum (for vet 1, trainers 2, dogsisters 3)"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="206dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9E80"
        android:text="Send"
        android:textColor="#090909"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="647dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="142dp"
        android:layout_height="118dp"
        app:srcCompat="@drawable/messege"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="597dp" />

</androidx.constraintlayout.widget.ConstraintLayout>